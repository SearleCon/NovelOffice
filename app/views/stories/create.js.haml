- unless @story.errors.any?
  $('#create_story').html('#{j render 'stories/form'}');
  $('#{j render @story}').hide().prependTo('#stories').fadeIn('slow', function(){$(this).children('.well_shadow').effect("highlight", {}, 3000);});
  $('#story-list').html('#{j render 'stories/story_list', stories: current_user.stories.order(updated_at: :desc)}');

$('#flash').html('#{j render('layouts/messages')}');



