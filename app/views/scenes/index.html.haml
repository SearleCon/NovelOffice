/ %h2 Scenes
/ %p Create a New Scene here:

/ = render 'new_scene'

/ %p Here are your list of your Scenes:

/ %ul
/   =@scenes.each do |s|
/     %li #{s.title} #{s.scene_content} 
/     #{link_to 'Edit', edit_story_scene_path(@story, s)} | #{link_to('Delete', story_scene_path(@story, s), :method => :delete, :confirm => 'Are you sure?')}
/     %br
/     %br

/ %div{:style => "float:right; text-align:center"}
/   %a{:href => "#top"} Back to Top






.span8.well
  You are currently editing "Story Name Here". You have a total of #{@scenes.count} scenes so far.

= content_for :sidebar do
  - nav_list do
    %li= link_to glyph(:home).concat(" Search Novels")
    %li= link_to glyph(:home).concat(" Help"), stories_path
    %li= link_to glyph(:home).concat(" Take the Tour"), stories_path
    %li= link_to glyph(:home).concat(" Back to Novels"), stories_path

  
  %hr
  %h2 Scenes
  %p Quick Scene:
  = render 'new_scene'
  
  %hr
  %p Your Current Scenes
  -@scenes.each do |s|
    %li #{truncate(s.title, :length => 20)} 

  %hr
  %img.img-rounded{:alt => "ZenNovel Logo", :src => "zn.png"}/
  
-@scenes.each do |s|
  .span8.well
    .bs-example
      .jumbotron
        %h1 #{s.title}
        %p #{s.scene_content}
        %p #{link_to 'Edit scene', edit_story_scene_path(@story, s)} | #{link_to 'Delete this Scene', story_scene_path(@story, s), :method => 'delete', :confirm => 'Are you sure you want to DELETE this Novel? This cannot be undone!'}
  

/ %p #{button_to 'Continue Writing', story_scenes_path(s), :class => "btn-primary"} | #{link_to 'Edit Title or Overview', edit_story_path(s)} | #{link_to 'Delete this Novel', s, :method => 'delete', :confirm => 'Are you sure you want to DELETE this Novel? This cannot be undone!'}
/

%div{:style => "float:right; text-align:center"}
  %a{:href => "#top"} Back to Top