= content_for :sidebar do
  - nav_list do
    %li= link_to glyph(:home).concat(" Search Novels")
    %li= link_to glyph(:home).concat(" Help"), stories_path
    %li= link_to glyph(:home).concat(" Back to Novels"), stories_path
  %hr
  %p= glyph(:home).concat(" Scene List")

  %ul.scene-list
    = render 'scene_list', scenes: @scenes
  %hr
