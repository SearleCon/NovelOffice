source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 4.0.0'


# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'


# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks
gem 'jquery-turbolinks'
gem 'turbolinks', '~> 1.2.0'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.5'

# Frontend
## Haml
gem 'haml-rails'
## Bootstrap
gem 'bootstrap-sass', '~> 2.3.2.0'
## Normalize css across browsers
gem 'normalize-rails'
## Bootswatch themes
gem 'bootswatch-rails'
## Bootstrap DateTimePicker
gem 'bootstrap-datetimepicker-rails'
## Bootstrap alert/confirmation boxes
gem 'bootbox-rails'

gem 'stamp'

# Static Pages
## Add static pages to pages folder.
## Use page_path('pagename') for routing.
gem "high_voltage"


# Authentication
gem 'devise', "~> 3.0.0"
gem "devise-async"

# Form Builders
gem 'simple_form', "3.0.0.rc"

# Fetch time zone
gem 'temporal-rails'

# Browser information
gem 'browser'

# Web Server
gem 'puma'

# Env variables
gem "figaro"


# Format emails nicely
gem 'premailer-rails'

# Preview Mail
gem "mail_view", "~> 1.0.3"


# Contact Form
gem 'mail_form', '1.5.0.rc'

# Place Holder Images
gem 'placeholdit'


# Background Processing
gem "delayed_job", "~> 4.0.0.beta2"
gem "delayed_job_active_record", "~> 4.0.0.beta3"
## Run processes locally
gem 'daemons'
gem 'rush'
## Access heroku worker scaling
gem 'heroku-api'

# App Responders - Sets flash in respond_with()
gem 'responders', '1.0.0.rc'

group :development do
  gem "better_errors"
  gem 'annotate', '~> 2.5.0'
  gem 'sqlite3'
  gem 'jazz_hands'
  gem 'quiet_assets'
end

group :test do
  # Test suites
  gem 'rspec-rails', '~> 2.0'
  gem "capybara", "~> 2.0.2"
  gem "launchy", "~> 2.2.0"


  # Factories
  gem "faker", "~> 1.1.2"
  gem "factory_girl_rails", "~> 4.2.1"
  gem "database_cleaner", '1.0.0.RC1'


  # Matchers
  gem "shoulda-matchers"
  gem 'json_spec'
  gem 'email_spec'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end


